<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TravelGlobe.MobileApp.Views.MapPage"
    Title="Mapa">
  
  <StackLayout Padding="10">
    <Label Text="Odwiedzone kraje:" FontAttributes="Bold" />
    <CollectionView ItemsSource="{Binding VisitedCountries}">
      <CollectionView.ItemTemplate>
        <DataTemplate>
          <Frame Margin="5" Padding="10" CornerRadius="5">
            <Label Text="{Binding CountryCode}" HorizontalOptions="Center" />
          </Frame>
        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>
    <Button Text="Dodaj podróż" Command="{Binding AddTripCommand}" />
  </StackLayout>
</ContentPage>
